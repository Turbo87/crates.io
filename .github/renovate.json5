{
    extends: [
        "config:best-practices",
        ":pinAllExceptPeerDependencies",
        ":maintainLockFilesWeekly",
        ":prConcurrentLimitNone",
        ":prHourlyLimitNone",
        ":semanticCommitsDisabled",
        ":automergeLinters",
        ":automergeTesters",
        "customManagers:dockerfileVersions",
        "customManagers:githubActionsVersions",
        "github>Turbo87/renovate-config//rust/updateToolchain",
    ],
    "dockerfile": {
        // This has been causing various issues, unfortunately.
        enabled: false,
    },
    packageRules: [
        {
            matchCategories: ["rust"],
            labels: ["A-backend ‚öôÔ∏è"],
        },
        {
            matchCategories: ["js"],
            labels: ["A-frontend üêπ"],
        },
        {
            matchDepNames: ["ember-cli", "ember-data", "ember-source"],
            separateMinorPatch: true,
        },
        {
            matchDepNames: [
                "@percy/cli",
                "tj-actions/changed-files",
                "webpack",
            ],
            extends: ["schedule:weekly"],
        },
        {
            // Avoid "Artifact update problem" for pnpm updates when the renovatebot
            // setup does not support the new version yet.
            matchDepNames: ["pnpm"],
            minimumReleaseAge: "24 hours",
        },
        {
            matchCategories: ["js"],
            matchUpdateTypes: ["lockFileMaintenance"],
            additionalBranchPrefix: "js-",
            commitMessageSuffix: "(JS)",
        },
        {
            matchCategories: ["rust"],
            matchUpdateTypes: ["lockFileMaintenance"],
            additionalBranchPrefix: "rust-",
            commitMessageSuffix: "(Rust)",
        },
        {
            matchManagers: ["custom.regex"],
            matchDepNames: ["rust"],
            commitMessageTopic: "Rust",
            labels: ["A-backend ‚öôÔ∏è"],
        },
        {
            matchDepPatterns: ["^diesel$", "^diesel_"],
            groupName: "diesel packages",
        },
        {
            matchDepNames: ["aws-ip-ranges", "github-meta"],
            automerge: true,
        },
    ],
}
